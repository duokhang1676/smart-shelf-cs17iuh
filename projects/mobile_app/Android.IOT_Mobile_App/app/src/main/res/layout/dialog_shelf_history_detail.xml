<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/txtDialogShelfTitle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Lịch sử - Kệ 1"
                  android:textSize="18sp"
                  android:textStyle="bold" />
        <TextView android:id="@+id/txtDialogUser"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Người thao tác: ..."
                  android:layout_marginTop="6dp" />
        <TextView android:id="@+id/txtDialogNotes"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Ghi chú: ..."
                  android:layout_marginTop="6dp" />
        <TextView android:id="@+id/txtDialogCounts"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Số lượng (pre → post)"
                  android:layout_marginTop="8dp"
                  android:textStyle="bold" />
        <TextView android:id="@+id/txtDialogPrePost"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text=""
                  android:layout_marginTop="4dp" />
        <TextView android:id="@+id/txtDialogProductsTitle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Danh sách sản phẩm cũ"
                  android:layout_marginTop="10dp"
                  android:textStyle="bold" />
        <LinearLayout android:id="@+id/llProducts"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="6dp" />
        <TextView android:id="@+id/txtDialogNewProductsTitle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Danh sách sản phẩm mới"
                  android:layout_marginTop="10dp"
                  android:textStyle="bold" />
        <LinearLayout android:id="@+id/llNewProducts"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="6dp" />
    </LinearLayout>
</ScrollView>